<% if user_signed_in? %>
  <%= render 'user_navbar' %>
<% else %>
  <%= render 'visitor_navbar' %>
<% end %>

  <h1 class="text-center">Islands List</h1>
  <div class="cards">
    <% @islands.each do |island| %>
      <div class="card-category">
        <%= link_to island_path(island), class: "text-decoration-none text-dark" do%>
          <%= render partial: 'card', locals: { island: island } %>
        <% end %>
      </div>
    <% end %>
  </div>

<div class="mt-4" style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<%= render partial: 'footer' %>
